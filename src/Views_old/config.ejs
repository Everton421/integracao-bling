<body>
    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="/">INTERSIG</a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-nav">
            <div class="nav-item text-nowrap">
                <a class="nav-link px-3" href="#">Sign out</a>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/produtos">
                                <span data-feather="shopping-cart"></span>
                                Produtos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="file"></span>
                                Pedidos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="users"></span>
                                Clientes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/config">
                                <span data-feather="users"></span>
                                Configurações
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="container" style="margin-top: 50px;">
                    <form id="configForm">
                        <% config.forEach((v) => { %>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <div class="form-check">
                                    <input class="form-check-input me-1" type="checkbox" id="importar_pedidos" name="importar_pedidos" value="1" <% if (parseInt(v.importar_pedidos) === 1) { %> checked <% } %> aria-label="...">
                                    <label class="form-check-label" for="importar_pedidos">Importar Pedidos</label>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="form-check">
                                    <input class="form-check-input me-1" type="checkbox" id="enviar_estoque" name="enviar_estoque" value="1" <% if (parseInt(v.enviar_estoque) === 1) { %> checked <% } %> aria-label="...">
                                    <label class="form-check-label" for="enviar_estoque">Enviar Estoque</label>
                                </div>
                            </li>
                         <!----
                            <li class="list-group-item">
                                <div class="form-check">
                                    <input class="form-check-input me-1" type="checkbox" id="enviar_precos" name="enviar_precos" value="1" <% if (parseInt(v.enviar_precos) === 1) { %> checked <% } %> aria-label="...">
                                    <label class="form-check-label" for="enviar_precos">Enviar Preço</label>
                                </div>
                            </li>
                          
                            <li class="list-group-item">
                                <p>Tabelas de Preço</p>
                                <select class="form-select" id="tabela" name="tabela" aria-label="Default select example">
                                    <option selected><%= v.tabela_preco %></option>
                                    <% tabelas.forEach((tabela) => { %>
                                    <option value="<%= tabela.CODIGO %>" <% if (v.tabela_preco === tabela.CODIGO) { %> selected <% } %>><%= tabela.CODIGO %></option>
                                    <% }) %>
                                </select>
                            </li>
-->
                        </ul>
                        <% }) %>
                        <button type="button" id="saveButton" class="btn btn-primary mt-3">Salvar</button>
                    </form>
                </div>
                <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('#saveButton').click(function () {
                var formData = {
                    importar_pedidos: $('#importar_pedidos').is(':checked') ? 1 : 0,
                    enviar_estoque: $('#enviar_estoque').is(':checked') ? 1 : 0,
                    enviar_precos: $('#enviar_precos').is(':checked') ? 1 : 0,
                    tabela: $('#tabela').val()
                };

                $.ajax({
                    type: 'POST',
                    url: '/teste',
                    data: formData,
                    success: function (response) {
                        console.log('Configurações atualizadas com sucesso');
                    },
                    error: function (error) {
                        console.log('Erro ao atualizar configurações', error);
                    }
                });
            });
        });
    </script>
</body>

</html>
